@page "/deposito"
@rendermode InteractiveServer

<Modal @ref="modal" IsVerticallyCentered="true" Title=@ModalTitulo Message=@ModalMensaje>
	<BodyTemplate>

	</BodyTemplate>
	<FooterTemplate>
		<Button Color="ButtonColor.Primary" @onclick="CerrarModal">Cerrar</Button>
	</FooterTemplate>
</Modal>

<hr>
@if (NombreCliente == "")
{
	<p><em>Cargando datos...</em></p>

	<hr>
}

<div class="bienvenido">
	<h4>Bienvenido @NombreCliente</h4>
</div>


<div class="titulo">
	<h2>Depositar</h2>
</div>


<EditForm Model="@modeloMovimientos" OnValidSubmit="Depositar">
	<DataAnnotationsValidator />
	<article class="formtransferencia">

		<div class="form-group">
			<label for="Recipiente">Cuenta a depositar: </label>
			<InputText class="form-control" id="Recipiente" @bind-Value="modeloMovimientos.CuentaReceptoraIdentificador" required />
		</div>
		<div class="form-group">
			<label for="Monto">Monto a depositar: </label>
			<InputText class="form-control" id="Monto" @bind-Value="modeloMovimientos.Monto" required />
		</div>
		<div class="form-group">
			<label for="Descripcion">Descripci√≥n: </label>
			<InputText class="form-control" id="Descripcion" @bind-Value="modeloMovimientos.Descripcion" required />
		</div>

		<div class="botones">
			<button type="button" class="btn btn-light" @onclick="Borrar">Borrar</button>
			<button type="submit" class="btn btn-dark">Depositar</button>
		</div>

	</article>
	<ValidationSummary />
</EditForm>

<p>@Cambio</p>