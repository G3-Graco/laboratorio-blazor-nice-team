@page "/registrarusuario"
@rendermode InteractiveServer

<div class="titulo">
	<h2>Regístrate</h2>
</div>

<Modal @ref="modal" IsVerticallyCentered="true">
	<BodyTemplate>
		
	</BodyTemplate>
	<FooterTemplate>
		<Button Color="ButtonColor.Primary" @onclick="CerrarModal" >Cerrar</Button>
	</FooterTemplate>
</Modal>

<EditForm Model="@modeloRegistrarUsuario" OnValidSubmit="Registrar" Title=@modalTitulo Message=@modalMensaje>
	<DataAnnotationsValidator />
	<article class="formregistrar">
		<div>
			<div class="form-group">
				<label>Cedula: </label>
				<InputText class="form-control" @bind-Value="modeloRegistrarUsuario.Cedula" required />
			</div>

			<div class="form-group">
				<label>Nombre: </label>
				<InputText class="form-control" @bind-Value="modeloRegistrarUsuario.Nombre" required />
			</div>

			<div class="form-group">
				<label>Apellido: </label>
				<InputText class="form-control" @bind-Value="modeloRegistrarUsuario.Apellido" required />
			</div>

			@* <div class="form-group">
				<label>Cedula: </label>
				<InputText class="form-control" @bind-Value="modeloRegistrarUsuario.Cedula" />
			</div> *@

			<div class="form-group">
				<label>Correo: </label>
				<InputText class="form-control" @bind-Value="modeloRegistrarUsuario.Correo" required />
			</div>

			<div class="form-group">
				<label>Fecha nacimiento: </label>
				<DateInput class="form-control" @bind-Value="@modeloRegistrarUsuario.FechaNacimiento" required />
			</div>
		</div>

		<div>
			

			<div class="form-group">
				<label>Telefono: </label>
				<InputText class="form-control" @bind-Value="modeloRegistrarUsuario.Telefono" required />
			</div>

			<div class="form-group">
				<label>Direccion: </label>
				<InputText class="form-control" @bind-Value="modeloRegistrarUsuario.Direccion" required />
			</div>

			<div class="form-group">
				<label>Nombre usuario: </label>
				<InputText class="form-control" @bind-Value="modeloRegistrarUsuario.NombreUsuario" required />
			</div>

			<div class="form-group">
				<label>Contraseña: </label>
				<InputText class="form-control" type=@Contrasena @bind-Value="modeloRegistrarUsuario.Contrasena" required />
				<Button class="mt-3 w-25" Color=" ButtonColor.Secondary" @onclick="VerContrasena"><Icon Name=@Icono /> </Button>
				@* <input class="btn btn-outline-secondary btn-sm" value="Ver contraseña" @onclick="VerContrasena"> </input> *@
	
			</div>

			<div>
				<input type="submit" class="btn btn-dark" value="Registrar" />
			</div>
		</div>
	</article>

	<ValidationSummary />
</EditForm>

<p>¿Ya tienes cuenta? <a href="iniciarsesion">¡Inicia sesión!</a></p>

